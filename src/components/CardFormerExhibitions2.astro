---
import "../styles/style.css";
import Button from "../components/Button.astro";
const { place, location, information, imgPath, buttonlink } = Astro.props;
---

<article>
  <section class="border">
    <div class="flex_row">
      <!-- Billede -->
      <div class="img_container">
        <img src={imgPath} alt="Viewing Room New York" />
      </div>

      <!-- Tekst -->
      <div class="text">
        <h3>{place}</h3>
        <h4>{location}</h4>
        <p>{information}</p>
        <div>
          <Button destination={buttonlink}> Read More</Button>
        </div>
      </div>
    </div>
  </section>
</article>

<style>
  @media screen and (min-width: 600px) {
    .text {
      display: flex;
      flex-direction: column;
      margin: 4%;
      gap: 25px;
    }

    .flex_row {
      margin-top: -3%;
      margin-bottom: -3%;
      justify-content: space-between;
      display: flex;
      flex-direction: row;
      align-items: center;
    }

    .img_container {
      height: 255px;
      margin-left: -55px;
      width: 600px;
      overflow: hidden;
      margin-bottom: 10%;
      margin-top: 10%;
    }

    .img_container img {
      transform: scale(1.2);
align-content: center;
top: -25px;
      width: 100%;
      display: block;
    }

    .border {
      border-top: solid 1px black;
      margin-left: -55px;
      margin-right: -55px;
      margin-top: 2%;
    }
  }

  @media screen and (max-width: 700px) {
    .flex_row {
      display: grid;
    }
    .text {
      order: 1;
      display: flex;
      flex-direction: column;
      gap: 15px;
      margin-bottom: 5%;
    }

    .img_container img {
      transform: scale(1.5);
      order: 2;
      margin-top: 1%;
    }

    .img_container {
      height: 255px;
      margin-left: -55px;
      width: 400px;
      overflow: hidden;
      margin-bottom: 2%;
      margin-top: 2%;
    }

    article {
      margin: 0;
    }
  }
</style>
