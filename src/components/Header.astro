---
import "../styles/style.css";
---

<div class="header">
  <div class="logo">
    <a href="/">
      <img src="../logo/logo_header.svg" alt="Logo" />
    </a>
  </div>
  <nav>
    <ul class="menu">
      <li><a href="/">Home</a></li>
      <li><a href="/artworks">Artworks</a></li>
      <li><a href="/the_artist">The artist</a></li>
      <li><a href="/former_exhibitions">Former Exhibitions</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
    <div class="burger">
      <div class="bar"></div>
      <div class="bar"></div>
      <div class="bar"></div>
    </div>
  </nav>
</div>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    padding: 0 30px;
    position: relative;
    z-index: 999;
    /* background-color: var(--hvidColor); */
  }
  nav {
    display: flex;
    align-items: center;
  }
  .logo {
    padding: 20px 0;
  }
  .menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .menu li:first-child {
    display: none;
  }
  .menu a {
    padding: 20px 20px;
  }

  /* Klassen active og hover funktion på menu linksene der får den røde farve */
  .active,
  .menu a:hover {
    padding: 20px 20px;
    color: var(--rød100Color);
  }
  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
  }
  .burger .bar {
    width: 100%;
    height: 2px;
    background-color: var(--sort100Color);
    margin-bottom: 8px;
    transition: 0.2s linear;
  }
  .burger {
    display: none;
  }

  /* Mobil version */
  @media screen and (max-width: 900px) {
    .header {
      padding: 25px 20px;
    }
    .menu {
      display: none;
    }
    .menu li:first-child {
      display: block;
    }
    .logo {
      padding: 12px 0 0 0;
    }
    .burger {
      display: block;
      margin-right: 10px;
    }
    /* Tilføjer klassen .active til burgermenuen, så vi kan lave en aktiv burgermenu i javascript */
    .burger.active .bar:nth-child(1) {
      transform: rotate(45deg) translate(8px, 8px);
      transition: 0.2s linear;
    }
    .burger.active .bar:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }
    .burger.active .bar:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
      transition: 0.2s linear;
    }
    nav.active .menu {
      display: flex;
      gap: 30px;
      flex-direction: column;
      background-color: var(--hvidColor);
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      padding: 100px 0 0 20px;
    }
    /* .red_color {
      color: var(--sort100Color);
    } */
  }
</style>

<script>
  // Definerer variabler for navigation og burgermenu
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");
  // Definerer alle links i menuen
  const links = document.querySelectorAll(".menu li a");

  // RØD FARVE PÅ AKTIVE NAVIGATIONSLINKS
  links.forEach((link) => {
    link.classList.remove("active");

    // Tjekker om linkets href-attribut matcher det aktuelle vindues window.location.href.
    // Hvis de matcher, tilføjes klassen "active" til linket, som har den røde farve.
    if (link.href === window.location.href) {
      link.classList.add("active");
    }
  });

  // BURGERMENU
  // Kalder funtion på click af burgermenuen.
  // Funktionen tilføjer klassen .active, når der klikkes på burgermenuen.
  burger.addEventListener("click", () => {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  });

  // Når der klikkes på linksene inde i burgermenuen, lukker burgermenuen igen.
  links.forEach((link) => {
    link.addEventListener("click", () => {
      burger.classList.remove("active");
      nav.classList.remove("active");
    });
  });
</script>
