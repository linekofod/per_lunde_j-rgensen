---
import "../styles/style.css";
---

<h3>Get in touch</h3>
<form action="/about" method="post">
  <label for="name">Name</label><br />
  <input type="text" id="name" name="name" required /><br />

  <label for="info">Email</label><br />
  <input type="text" id="info" name="info" required /><br />

  <label for="enquiry">Inquiry</label><br />

  <textarea
    name="enquiry"
    id="enquiry"
    cols="30"
    rows="5"
    placeholder="Enter your message"></textarea>
  <input class="button" type="submit" value="SEND" />
</form>

<style>
  h3 {
    margin-bottom: 10px;
  }
  input {
    width: 80%;
    padding: 10px;
    margin-bottom: 28px;
    margin-top: 8px;
    border: 1px solid var(--sort100Color);
    font-family: Helvetica;
    font-size: 14px;
  }
  /* Inner shadow når man klikker, i stedet for blå outline */
  input[type="text"]:focus {
    box-shadow: 1px 1px 4px var(--sort60Color) inset;
    outline: none;
  }
  /* Styling af placeholder i Inquiry input felt */
  input::placeholder {
    font-family: Helvetica;
    color: var(--sort60Color);
  }
  form label {
    font-family: "Inter-Regular";
    font-size: 20px;
    color: var(--sort100Color);
  }
  .button {
    padding: 18px 50px;
    border: 1px solid var(--sort100Color);
    background-color: var(--hvidColor);
    cursor: pointer;
    width: fit-content;
    margin-top: 20px;
  }
  .button:hover {
    box-shadow: 5px 5px 4px #ac2a224d;
    color: var(--rød100Color);
  }
  input[type="submit"] {
    font-size: 18px;
    text-transform: uppercase;
    text-decoration: none;
    color: var(--sort100Color);
  }
  textarea {
    width: 80%;
    border-style: solid;
    resize: none;
    padding: 10px 10px;
    font-family: Helvetica;
    font-size: 14px;
  }
  textarea:focus {
    box-shadow: 1px 1px 4px var(--sort60Color) inset;
    outline: none;
  }

  /* Mobil version */
  @media screen and (max-width: 800px) {
    .left_info {
      margin-bottom: 40px;
    }
    form label {
      font-size: 16px;
    }
    input {
      padding: 5px;
      margin-bottom: 18px;
      width: 100%;
    }
    textarea {
      margin-top: 8px;
      width: 100%;
    }
    .button {
      padding: 15px 40px;
      font-size: 14px;
    }
    a {
      font-size: 22px;
    }
  }
</style>
