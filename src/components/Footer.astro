---
import "../styles/style.css";
---

<div class="footer">
  <div class="logo">
    <a href="/"> <img src="/logo/logo_footer.svg" alt="Logo" /></a>
  </div>
  <nav>
    <h5 class="h_bold">Overview</h5>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/artworks">Artworks</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/former_exhibitions">Former Exhibitions</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
  <div class="some">
    <h5 class="h_bold">Social Media</h5>
    <div class="some_icons">
      <a href="/">
        <img src="/imgs/some/instagram.svg" alt="Instagram icon" /></a
      >
      <a href="/"> <img src="/imgs/some/mail.svg" alt="Mail icon" /></a>
    </div>
  </div>
</div>

<style>
  .footer {
    position: relative;
    bottom: 0;
    width: 100%;
    border-top: 1px solid var(--sort100Color);
    padding: 68px 0;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }
  h5 {
    text-transform: uppercase;
  }
  .logo {
    margin: auto;
  }
  nav {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
  }
  nav ul {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
  }
  li {
    list-style: none;
  }
  li a:hover {
    color: var(--r√∏d100Color);
  }
  .some {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
  }
  .some_icons {
    display: flex;
    flex-direction: row;
    gap: 20px;
    align-items: baseline;
  }

  /* Mobil version */
  @media screen and (max-width: 600px) {
    .footer {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px 0;
      padding: 50px 0;
    }
    nav {
      gap: 10px;
    }
    .some {
      grid-column: 2;
    }
    .some_icons {
      width: 50%;
    }
    .logo {
      padding: 30px;
      grid-row: 1 / span 2;
    }
    a {
      font-size: 18px;
    }
    ul li a {
      font-size: 12px;
    }
  }
</style>
