---
import "../styles/style.css";
import Button from "../components/Button.astro";
const { place, location, information, imgPath, buttonlink, position } =
  Astro.props;
---

<article class="container">
  <!-- Class "border" giver stregen rundt om kassen -->
  <section class="border">
    <!-- Class "flex_row laver rækken, med tekst i en side og billede i den anden." -->
    <div class="flex_row">
      <!-- Tekst -->
      <div class={position} id="text">
        <h3>{place}</h3>
        <h4>{location}</h4>
        <p>{information}</p>

        <!-- Knap, hvor prop buttonlink er sat ind, så man kan udfylde linket til knappen inde i former_exhibitions -->
        <div class="button">
          <a href={buttonlink} target="_blank">Read more</a>
        </div>
      </div>

      <!-- Billede -->
      <div class="img_container">
        <img src={imgPath} alt="Viewing Room New York" />
      </div>
    </div>
  </section>
</article>

<style>
  /* Desktop */

  /* Laver flex box til teksen og fortæller om teksen skal være til venstre eller højre  */
  .text_left {
    display: flex;
    flex-direction: column;
    margin: 4%;
    gap: 10px;
  }
  .text_right {
    display: flex;
    flex-direction: column;
    margin: 4%;
    gap: 10px;
    order: 2;
  }
  /* laver flex row, laver rækken, som vores (tekst og  billede er på) */
  .flex_row {
    margin-top: 2%;
    margin-bottom: 2%;
    justify-content: space-between;
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .button a {
    padding: 18px 50px;
    border: 1px solid var(--sort100Color);
    background-color: var(--hvidColor);
    cursor: pointer;
  }
  .button a:hover {
    box-shadow: 5px 5px 4px #ac2a224d;
    color: var(--rød100Color);
  }
  .button {
    margin-top: 30px;
  }

  /* Giver billedet de rigtige dimensioner */
  /* Laver container til billedet, så det kan få de rigtige mål. */
  .img_container {
    height: auto;
    margin-left: 50px;
    margin-right: 55px;
    width: 600px;
    overflow: hidden;
    margin-bottom: 5%;
    margin-top: 5%;
  }
  .img_container img {
    width: 100%;
  }

  /* Laver vores border */
  .border {
    border-top: solid 1px black;
    margin-left: -55px;
    margin-right: -55px;
    margin-top: 2%;
  }

  /* Mobile */
  @media screen and (max-width: 700px) {
    /* Flex row, men denne gang bruges det til at ændre række følgen  */
    .flex_row {
      display: grid;
    }

    /* Flex til teksen og der er også givet rækkefølge så teksten bliver vist først */
    /* Teksten har fået rækkeføgen 2 */
    #text {
      order: 2;
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-bottom: 18%;
      margin-right: 5%;
    }

    /* billedet har fået rækkerfølgen 1.  */
    .img_container img {
      order: 1;
      margin-top: 10%;
    }

    /* Giver de rigtige dimensioner til vores billede, og fjerner det overskydene */
    .img_container {
      height: auto;
      margin-left: -55px;
      width: 400px;
      overflow: hidden;
      margin-bottom: 2%;
      margin-top: 2%;
    }
  }
</style>
