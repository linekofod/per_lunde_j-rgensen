---
import "../styles/style.css";
import Button from "../components/Button.astro";
const { place, location, information, imgPath, buttonlink } = Astro.props;
---

<section class="border">
  <div class="box">
    <h3>{place}</h3>
    <div class="flex_row">
      <div class="text">
        <h4>{location}</h4>
        <p>
          {information}
        </p>
        <Button destination={buttonlink}> Read More</Button>

      </div>
      <div class="img_container">
        <img src={imgPath} alt="Viewing Room New York" />
      </div>
    </div>
  </div>

</section>

<style>
  @media screen and (min-width: 600px) {
    .box {
      display: flex;
      flex-direction: column;
      margin-bottom: 10%;
      margin-top: 2%;

    }

    .text {
      display: flex;
      flex-direction: column;
      gap: 50px;
      margin-top: 1%;
    }

    .flex_row {
      margin-bottom: -6%;
      justify-content: space-between;
      display: flex;
      flex-direction: row;
      align-items: center;
    
    }
  }


  .img_container {
    height: 250px;
    width: 550px;
    overflow: hidden;
    align-items: center;
    margin-right: 0;
  }

  .img_container img {
    transform: translate(-10%, -20%);
    width: 100%;
    display: block;
  }

  .border {
    position: relative;
    bottom: 0;
    width: 100%;
    border-top: 1px solid var(--sort100Color);
    margin-top: 3%;
    margin-bottom: 2%;
  }
</style>
