---

<MainLayout title="Artworks">
  <h1>Artworks</h1>
  <FilterArtworks />
  <h3>All Artworks</h3>
  <section class="artworks">
    <!-- Mapper over dataen, og indsÃ¦tter det i komponentet CardArtworks -->
    {
      data.map((artwork) => {
        return <CardArtworks data={artwork} />;
      })
    }
  </section>
</MainLayout>

<style>
  /* Artworks bliver vist som grid */
  .artworks {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(420px, 420px));
    justify-content: center;
    gap: 30px;
  }
  h3 {
    margin: 0px 0 20px 0;
  }
  hr {
    margin-bottom: 40px;
    background-color: var(--sort100Color);
    border: none;
    height: 1px;
  }

  /* Mobil version */
  @media screen and (max-width: 800px) {
    .artworks {
      display: block;
    }
    h3 {
      margin: 0px 0 20px 0;
    }
  }
</style>
