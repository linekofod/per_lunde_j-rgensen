---
import "../styles/style.css";
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Home">
  <section>
    <!-- Baggrundsbillede -->
    <figure class="background_img zoom_out"></figure>
    <!-- Container hvor overskrift og knap er -->
    <div class="navn_knap fade_in">
      <div class="overskrift">
        <h1>Per Lunde</h1>
        <h1>Jørgensen</h1>
      </div>
      <div>
        <Button destination="/artworks">See artworks</Button>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Styling af baggrundsbilledet */
  .background_img {
    background-image: url("/imgs/index.webp");
    background-size: cover; /* Dækker hele elementet */
    background-repeat: no-repeat; /* Ingen gentagelse af baggrundsbillede */
    background-position: center; /* Centreret baggrundsbillede */
    height: 103vh;
    width: 100vw;
    margin: -160px -60px -60px -56px;
  }

  /* Styling af container hvor H1 og knap indgår */
  .navn_knap {
    position: absolute;
    bottom: 70px;
    display: flex;
    flex-direction: column;
    gap: 35px;
    width: fit-content;
  }
  h1 {
    line-height: 1;
    margin: 0;
  }
  .overskrift {
    display: flex;
    flex-direction: row;
    gap: 22px;
  }
  /* Zoom out animation på baggrundsbilledet */
  .zoom_out {
    animation-name: zoom_in_kf;
    animation-duration: 3s;
  }
  @keyframes zoom_in_kf {
    from {
      scale: 1.5 1.5;
    }
  }
  /* Fade in animation på titlen og knappen */
  .fade_in {
    animation-name: fade_in_kf;
    animation-duration: 3s;
  }
  @keyframes fade_in_kf {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  /* Mobilversion */
  @media screen and (max-width: 800px) {
    /* Styling af baggrundsbilledet */
    .background_img {
      height: 910px;
      width: auto;
      margin: -160px -28px -60px -28px;
    }
    /* Styling af container hvor H1 og knap indgår i mobilversionen */
    .navn_knap {
      margin: 0 0 40px 0px;
      gap: 25px;
    }
    .overskrift {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }
    .overskrift h1:first-child {
      padding-left: 3px;
    }

    /* Fjern zoom out animation */
    .zoom_out {
      animation-name: zoom_in_kf;
      animation-duration: none;
    }
    @keyframes zoom_in_kf {
      from {
        scale: none;
      }
    }
    /* Gør fade in på overskrift hurtigere */
    .fade_in {
      animation-name: fade_in_kf;
      animation-duration: 2s;
    }
    @keyframes fade_in_kf {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
  }
</style>
