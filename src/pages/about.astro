---
import "../styles/style.css";
import MainLayout from "../layouts/MainLayout.astro";
import FormAbout from "../components/FormAbout.astro";
---

<MainLayout title="About">
  <!-- Overskrift -->
  <div class="grid_contact">
    <div class="vl"></div>
    <!-- Venstre grid -->
    <div>
      <h1>About</h1>

      <section class="left_info">
        <!-- Adresse -->
        <div class="adresse">
          <h3>Address</h3>
          <h5 class="h_bold">Bonamatic</h5>
          <p>Degnestavnen 17, st.tv.</p>
          <p>2400 København NV</p>
        </div>

        <!-- Åbningstider -->
        <div class="opening_hours">
          <h3>Opening hours</h3>
          <div class="grid_1-1">
            <div class="fælles_åbningstider">
              <div class="åbningstider">
                <h5 class="h_bold">Monday:</h5><p>Closed</p>
              </div>
              <div class="åbningstider">
                <h5 class="h_bold">Tuesday:</h5><p>Closed</p>
              </div>
              <div class="åbningstider">
                <h5 class="h_bold">Wednesday:</h5><p>Closed</p>
              </div>
              <div class="åbningstider">
                <h5 class="h_bold">Thursday:</h5><p>15:30-17:00</p>
              </div>
              <div class="åbningstider">
                <h5 class="h_bold">Friday:</h5><p>15:30-17:00</p>
              </div>
              <div class="åbningstider">
                <h5 class="h_bold">Saturday:</h5><p>12:00-15:00</p>
              </div>
              <div class="åbningstider">
                <h5 class="h_bold">Sunday:</h5><p>Closed</p>
              </div>
            </div>
            <!-- Illustration -->
            <img src="/imgs/illustration1.svg" alt="" />
          </div>
        </div>

        <!-- Kontakt -->
        <div class="kontakt">
          <h3>Per Lunde Jørgensen</h3>
          <div class="phone">
            <h5 class="h_bold">Phone:</h5>
            <p>+45 36 16 77 10</p>
          </div>
          <div class="email">
            <h5 class="h_bold">Email:</h5>
            <p>plj@nonsite.dk</p>
          </div>
        </div>
      </section>
    </div>

    <!-- Højre grid (form-container) -->
    <div class="form-container">
      <FormAbout />
    </div>
  </div>
</MainLayout>

<style>
  .grid_1-1 {
    display: grid;
    grid-template-columns: 250px 200px;
  }
  .grid_contact {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin: 20px;
    position: relative;
  }
  .left_info {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  /* Åbningstider */
  .åbningstider {
    display: flex;
    flex-direction: row;
    align-items: baseline;
    gap: 8px;
  }

  .fælles_åbningstider {
    display: flex;
    flex-direction: column;
    gap: 0px;
  }

  h3 {
    margin-bottom: 10px;
  }

  /* Pers oplysninger */
  .phone,
  .email {
    display: flex;
    flex-direction: row;
    align-items: baseline;
    gap: 8px;
  }

  /* Form */
  .form-container {
    grid-column: 2;
    margin-top: 20px;
  }

  /* Linje */
  .vl {
    border-left: 1px solid var(--sort100Color);
    height: 160vh;
    position: absolute;
    left: 40%;
    top: -160px;
    z-index: 0;
  }

  img {
    margin-top: 10%;
    width: 75%;
  }

  /* Mobil version */
  @media screen and (max-width: 800px) {
    /* Linje forsvinder, mobilversion */
    .vl {
      display: none;
    }

    /* Grid */
    .grid_1-1 {
      grid-template-columns: 200px 1fr;
      align-items: center;
    }
    .grid_contact {
      display: block;
      margin: 0;
    }
    img {
      width: 90%;
      margin-top: 0;
    }

    /* Form */
    .form-container {
      margin-top: 40px;
    }
  }
</style>
